{

    "manifest_version": 2,
    "name": "hybridge",
    "version": "0.1",

    "description": "Generic application-browser bridge interface.",

    "browser_action": {
        "default_icon": {
            "48": "icons/icon.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://localhost/~nastasi/hybridge-chrome/*"],
            "js": ["content.js"]
        }
    ],
    "externally_connectable": {
        "matches": ["*://localhost/~nastasi/hybridge-chrome/*"]
    },
    "permissions": [
        "activeTab"
    ]
}
