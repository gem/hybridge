{

    "manifest_version": 2,
    "name": "hybridge",
    "version": "0.1",

    "description": "Generic application-browser bridge interface.",

    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "HyBridge extension"
    },
    "background": {
        "scripts": ["background_commons.js", "background_apps.js",
                    "background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://localhost/*"],
            "js": ["content.js"]
        }
    ],
    "externally_connectable": {
        "matches": ["*://localhost/*"]
    },
    "permissions": [
        "activeTab"
    ]
}
