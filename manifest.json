{

  "manifest_version": 2,
  "name": "hybridge",
  "version": "0.1",

  "description": "Generic application-browser bridge interface .",

    "browser_action": {
        "default_icon": {
            "48": "icons/icon.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://localhost/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}
